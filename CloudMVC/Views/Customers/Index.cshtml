@model IEnumerable<CloudMVC.Customers>

@{
    ViewBag.Title = "Customers";
}

<p>
    <a href="@Url.Action("Create", "Customers")" class="btn btn-success"><span>Create New</span></a>
</p>

<table class="table table-bordered table-striped table-vcenter">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Countries.CountryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Countries.CountryName)
            </td>
            <td>            
                <div class="btn-group btn-group-xs">
                    <a href="@Url.Action("Edit", "Customers", new { id = item.CustomerID })" class="btn btn-sm btn-warning" title="Edit"><i class="fa fa-pencil"></i></a>

                    <a href="@Url.Action("Details", "Customers", new { id = item.CustomerID })" class="btn btn-sm btn-info" title="Details"><i class="fa fa-eye"></i></a>

                    <a href="@Url.Action("Delete", "Customers", new { id = item.CustomerID })" class="btn btn-sm btn-danger" title="Delete"><i class="fa fa-times"></i></a>
                </div>
            </td>
        </tr>
    }

</table>
